{
	"$schema": "vscode://schemas/color-theme",
	"type": "dark",
	"colors": {
		"titleBar.activeBackground": "#292929",
		"menu.background": "#151515",
		"menu.foreground": "#d4d4d4",

		"editor.background": "#171717",
		"editor.foreground": "#d4d4d4",
		"editor.inactiveSelectionBackground": "#3a3d41",
		"editor.selectionHighlightBackground": "#add6ff26",
		"editorIndentGuide.activeBackground": "#707070",
		"editorIndentGuide.background": "#404040",
		
		"icon.foreground": "#ffffff",
		"input.placeholderForeground": "#a6a6a6",
		"ports.iconRunningProcessForeground": "#369432",
		
		"list.activeSelectionIconForeground": "#ffffff",
		"list.dropBackground": "#0f0f0f",
		
		
		"sideBarSectionHeader.background": "#00000000",
		"sideBarSectionHeader.border": "#cccccc33",
		"sideBarTitle.foreground": "#bbbbbb",
		"sideBar.background": "#1b1b1b",
		
		"tab.lastPinnedBorder": "#cccccc33",
		"tab.inactiveBackground": "#212121",
		"tab.inactiveForeground": "#999999",
		"tab.activeBackground": "#141414",
		"tab.activeForeground": "#ffffff",
		
		"statusBar.background": "#1866cc",
		"statusBar.foreground": "#ffffff",
		"statusBarItem.remoteBackground": "#2080ff",
		"statusBarItem.remoteForeground": "#ffffff",

		"activityBar.background": "#181818",
		"activityBarBadge.foreground": "#ffffff",
		"activityBarBadge.background": "#0059ff",
		
		"activityBar.inactiveForeground": "#3a3a3a"

	},
    "semanticHighlighting": true,
	"tokenColors": [
		{
			"scope": 
			[
				"support.constant",
				"entity.name.class",
				"entity.name.type",
				"entity.name.namespace",
				"entity.name.scope-resolution",
				"support.function.construct",
				"keyword.other.new",
				"constant.character",
				"constant.other",
				"support.other.variable",
				"support.type.exception",
			],
			"settings": 
			{
				"foreground": "#00f094"
			}
		},
		//Functions
		{
			"scope": 
			[
				"entity.name.function",
				"support.function",
			],
			"settings": 
			{
				"foreground": "#ffd970"
			}
		},
		{
			"scope": [
				"punctuation.section.embedded.begin",
				"punctuation.section.embedded.end",
				"punctuation.separator.continuation",
				"string.regexp",
				"invalid",
			],
			"settings": {
				"foreground": "#D30102"
			}
		},
		{
			"scope": [
				"keyword", // General Keywords like if, else in as with while
				"storage", // Access Modifiers
				"constant.language", //Booleans
				"meta.preprocessor", // using and import
				"punctuation.definition.tag",
			],
			"settings": {
				"foreground": "#268BD2"
			}
		},
		//Operators
		{
			"scope": [
				"keyword.operator",
			],
			"settings": {
				"foreground": "#ffffff"
			}
		},
		//Variables
		{
			"scope": [
				"punctuation.definition.variable",
				"variable.language",
				"variable.other",
				"support.type",
				"support.class",
			],
			"settings": {
				"foreground": "#8cceec"
			}
		},
		{
			"scope": [
				
				"entity.name.tag",
				"entity.other.inherited-class",
				
			],
			"settings": {
				"foreground": "#bf5ed8"
			}
		},
		///COMMENTS
		{
			"scope": "comment",
			"settings": {
				"foreground": "#46af46",
				"fontStyle": "italic"
			}
		},
		///STRINGS
		{
			"scope": 
			[
				"string",
			],
			"settings": {
				"foreground": "#ff976d"
			}
		},
		// NUMBERS
		{
			"scope": "constant.numeric",
			"settings": {
				"foreground": "#c3ffa8"
			}
		},
		// Other
		{
			"scope": [
				"meta.diff",
				"meta.diff.header",
				"meta.embedded",
				"source.groovy.embedded",
				"entity.other.attribute-name",
			],
			"settings": {
				"foreground": "#2fff00",
				"fontStyle": "italic"
			}
		},		
				
		// TOKENS
		{
			"scope": "token.info-token",
			"settings": {
				"foreground": "#6796E6",
			}
		},
		{
			"scope": "token.warn-token",
			"settings": {
				"foreground": "#CD9731"
			}
		},
		{
			"scope": "token.error-token",
			"settings": {
				"foreground": "#F44747"
			}
		},
		{
			"scope": "token.debug-token",
			"settings": {
				"foreground": "#B267E6"
			}
		}
	]
}